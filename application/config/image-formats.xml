            <title lang="de">Galerie Vorschau small</title>
        </meta>

        <scale x="250" y="250" />
    </format>

    <format key="1920x1200">
        <meta>
            <title lang="de">Galerie Vollbild</title>
        </meta>

        <scale x="1920" y="1200" mode="inset" />
    </format>
    <!-- gallery module END -->

    <!-- concert teaser module START -->
    <format key="2560x350">
        <meta>
            <title lang="de">Konzert-Teaser extra-large</title>
