    </format>
    <format key="1280x300">
        <meta>
            <title lang="de">Konzert-Teaser medium</title>
        </meta>

        <scale x="1280" y="300" />
    </format>
    <format key="640x350">
        <meta>
            <title lang="de">Konzert-Teaser small</title>
        </meta>

        <scale x="640" y="350" />
    </format>
    <!-- concert teaser module END -->


    <format key="1280x720">
        <meta>
            <title lang="de">Social-Media Sharing Image (OG-Image)</title>
