    <!--
    Render an image from the media_selection in a specific format the following way:

    <img src="{{ image.thumbnails['300x'] }}" alt="{{ image.title }}" title="{{ image.description|default(image.title) }}">
    -->

    <!-- Remove unused: bin/websiteconsole sulu:media:format:cache:cleanup -->
    <!-- Regenerate: bin/websiteconsole sulu:media:regenerate-formats -->
    <!-- Clear all generated: bin/websiteconsole sulu:media:format:cache:clear -->

    <!-- stage module START -->
    <format key="2560x660">
        <meta>
            <title lang="de">Stage extra-large retina</title>
        </meta>

        <scale x="2560" y="660" />
    </format>

    <format key="2560x860">
        <meta>
            <title lang="de">Stage large retina</title>
        </meta>

        <scale x="2560" y="860" />
    </format>

    <format key="1280x620">
        <meta>
